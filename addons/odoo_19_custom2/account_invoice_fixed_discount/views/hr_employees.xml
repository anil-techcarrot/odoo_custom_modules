<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Hide employee_type in hr.employee form -->
    <record id="view_employee_form_hide_employee_type" model="ir.ui.view">
        <field name="name">hr.employee.form.hide.employee.type</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='employee_type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>