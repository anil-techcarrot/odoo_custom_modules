<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Scheduled action for automatic check-out -->
        <record id="ir_cron_auto_checkout_employees" model="ir.cron">
            <field name="name">Auto Check-out Employees</field>
            <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
            <field name="state">code</field>
            <field name="code">model.auto_checkout_employees()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
            <field name="nextcall" eval="(datetime.now().replace(hour=0, minute=5) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="priority">5</field>
        </record>
    </data>
</odoo>
