<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_payslip_inherit_multi_currency" inherit_id="hr_payroll.report_payslip">
        <span t-out="o.contract_id._get_contract_wage()" position="replace">
            <span t-out="o.contract_id._get_contract_wage()"
                  t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
        </span>


        <span t-out="worked_days.amount" position="replace">
            <span t-out="worked_days.amount" digits="[42, 2]"
                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
        </span>
        <span t-esc="line.total" position="replace">
            <span t-esc="line.total"
                  t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                  t-att-style="'color:#875A7B;' if line.total &lt; 0 else ''"/>
        </span>
    </template>
</odoo>
