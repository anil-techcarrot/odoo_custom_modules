<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="techcarrot_crm_industry_tree_view" model="ir.ui.view">
            <field name="name">crm.industry.tree.view</field>
            <field name="model">crm.industry</field>
            <field name="arch" type="xml">
                <list string="Industry" editable="top">
                    <field name="name"/>
                </list>
            </field>
        </record>

    <record id="crm_industry_action" model="ir.actions.act_window">
        <field name="name">Industry</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.industry</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Industry found. Let's create one!
            </p>
        </field>
    </record>

    <menuitem
            id="menu_crm_industry"
            name="Industry"
            action="crm_industry_action"
            parent="crm.crm_menu_config"
            sequence="20"/>
</odoo>