<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="techcarrot_ist_member_tree_view" model="ir.ui.view">
            <field name="name">ist.member.tree.view</field>
            <field name="model">ist.member</field>
            <field name="arch" type="xml">
                <list string="IST Member" editable="top">
                    <field name="name"/>
                </list>
            </field>
        </record>

    <record id="ist_member_action" model="ir.actions.act_window">
        <field name="name">IST Member</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ist.member</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No IST Member found. Let's create one!
            </p>
        </field>
    </record>

    <menuitem
            id="menu_ist_member"
            name="IST Member"
            action="ist_member_action"
            parent="crm.crm_menu_config"
            sequence="20"/>
</odoo>