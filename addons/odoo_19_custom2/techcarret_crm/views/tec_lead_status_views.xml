<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="techcarrot_lead_status_tree_view" model="ir.ui.view">
            <field name="name">lead.status.tree.view</field>
            <field name="model">lead.status</field>
            <field name="arch" type="xml">
                <list string="Lead Status" editable="top">
                    <field name="name"/>
                </list>
            </field>
        </record>

    <record id="lead_status_action" model="ir.actions.act_window">
        <field name="name">Lead Status</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">lead.status</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Lead Status found. Let's create one!
            </p>
        </field>
    </record>

    <menuitem
            id="menu_lead_status"
            name="Lead Status"
            action="lead_status_action"
            parent="crm.crm_menu_config"
            sequence="20"/>
</odoo>