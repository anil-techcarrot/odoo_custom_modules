<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="techcarrot_deal_type_tree_view" model="ir.ui.view">
            <field name="name">deal.type.tree.view</field>
            <field name="model">deal.type</field>
            <field name="arch" type="xml">
                <list string="Deal Type" editable="top">
                    <field name="name"/>
                </list>
            </field>
        </record>

    <record id="deal_type_action" model="ir.actions.act_window">
        <field name="name">Deal Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">deal.type</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No deal type found. Let's create one!
            </p>
        </field>
    </record>

    <menuitem
            id="menu_deal_type"
            name="Deal Type"
            action="deal_type_action"
            parent="crm.crm_menu_config"
            sequence="20"/>
</odoo>