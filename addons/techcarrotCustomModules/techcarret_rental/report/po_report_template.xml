<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_techcarrot_purchase_document">
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                    <style>
                        table, th, td {
                            border:1px solid black;
                            padding-left:10px;
                            padding:5px;
                        }
                        .br-right {
                            border:1px solid black;
                            padding:5px;
                        }
                        .text-right {
                            text-align: end;
                        }
                        * {
                            font-size: 19px !important;
                        }
                        h1 {
                            font-size: 32px !important;
                        }
                        h3 {
                            font-size: 22px !important;
                        }
                    </style>
                    <div class="page">
                        <div class="row mb-4">
                            <div class="col-6" name="logo">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <img t-if="o.company_id.logo" class="o_company_logo_small" t-att-src="image_data_uri(o.company_id.logo)" alt="Logo"/>
                                </div>
                                <div class="no-border" style="font-size:24px;"><b><t t-esc="o.company_id.name"/></b></div>
                                <div class="no-border" ><t t-esc="o.company_id.street"/>, <t t-esc="o.company_id.street2"/></div>
                                <div class="no-border" ><t t-esc="o.company_id.city"/></div>
                                <div class="no-border" ><t t-esc="o.company_id.zip"/></div>
                                <div class="no-border" ><t t-esc="o.company_id.state_id.name"/>, <t t-esc="o.company_id.country_id.name"/></div>
                                <div class="no-border" >VAT: <t t-esc="o.company_id.vat"/></div>
                            </div>
                            <div class="col-6 text-end" name="div_billing_address" >
                                <h1 class="text-end">Purchase Order</h1>
                                <h3 class="text-end"># <t t-esc="o.name"/></h3>
<!--                                <div class="text-end no-border" style="font-size:35px;"><b># <t t-esc="o.name"/></b></div><br></br>-->
                            </div>
                        </div>
                        <br></br>

                        <div class="row mb-4">
                            <div class="col-6" name="div_billing_address">
                                <br></br>
                                <div name="customer_address" >
                                    <span>Vendor Address</span>
                                </div>
                                <div name="partner_header">
                                    <div t-field="o.partner_id"
                                         t-options='{"widget": "contact", "fields": ["address", "name", "phone", "vat"], "no_marker": True, "phone_icons": True}'/>
                                </div>
                                <br></br>
                                <div name="customer_address" >
                                    <span>Deliver To</span>
                                </div>
                                <div name="partner_header">
                                    <div t-field="o.deliver_partner_id.name"></div>
                                </div>
                            </div>
                            <div class="col-6 text-end" name="div_billing_address">
                                <table class="table table-borderless" width="100%" style="border : none;">
                                            <tr>
                                                <td width="60%">Date</td>
                                                <td width="5%">:</td>
                                                <t t-if="o.date_approve">
                                                    <t t-set="parsed_date" t-value="o.date_approve.date()"/>
                                                    <td width="35%"><span t-esc="parsed_date.strftime('%d %b %Y')"></span></td>
                                                </t>
                                                <t t-else="">
                                                    <t t-set="order_parsed_date" t-value="o.date_order.date()"/>
                                                    <td width="35%"><span t-esc="order_parsed_date.strftime('%d %b %Y')"></span></td>
                                                </t>

                                            </tr>
                                            <tr>
                                                <td >Payment Terms</td>
                                                <td >:</td>
                                                <td ><span t-field="o.payment_term_id.name"></span></td>
                                            </tr>
                                            <tr>
                                                <td >Ref#</td>
                                                <td >:</td>
                                                <td ><span t-field="o.partner_ref"></span></td>
                                            </tr>
                                        </table>
                            </div>
                        </div>
                         <br></br>
                        <div >
                        <div class="page mb-4">
                            <table width="100%"  style="border:none;" class="table table-borderless">
                                <thead>
                                    <tr style="background-color:#404040;border:none;">
                                        <th name="th_description" width="5%" class="text-center" style="color: white;border:none;"><span >#</span></th>
                                        <th name="th_description" width="38%" style="color: white;border:none;"><span>Item &amp; Description</span></th>
                                        <th name="th_quantity" width="10%"  class="text-end" style="color: white;border:none;"><span>Qty</span></th>
                                        <th name="th_quantity" width="10%" class="text-end" style="color: white;border:none;"><span>Rate</span></th>
                                        <th name="th_quantity" width="11%" class="text-end" style="color: white;border:none;"><span>Tax %</span></th>
                                        <th name="th_quantity" width="11%" class="text-end" style="color: white;border:none;"><span>Tax</span></th>
                                        <th name="th_quantity" width="15%" class="text-end" style="color: white;border:none;"><span>Amount</span></th>
                                    </tr>
                                </thead>
                                <tbody >
                                    <t t-set="lines" t-value="o.order_line.sorted(key=lambda l: (-l.sequence,  -l.id), reverse=True)"/>
                                    <t t-set="count" t-value="0"/>
                                    <t t-foreach="lines" t-as="line">
                                        <t t-set="count" t-value="count + 1"/>
                                        <tr style="border:none" t-att-class="'fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                            <t name="po_line">
                                                <td class="text-center" style="border:none">
                                                    <span t-out="count"></span>
                                                </td>
                                                <td name="line_name" style="border:none">
                                                    <span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}">Bacon Burger</span>
<!--                                                    <span t-if="line.name" t-field="line.name" t-options="{'widget': 'text'}">Bacon Burger</span>-->
                                                </td>
                                                <td name="td_quantity" class="text-end " style="border:none">
                                                    <span t-out="line._check_qty_whole_fraction_po_line()">3.00</span>
                                                    <span t-field="line.product_uom"  groups="uom.group_uom">units</span>
                                                </td>
                                                <td name="td_price_unit" style="border:none" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                    <span  t-field="line.price_unit"></span>
                                                </td>
                                                <t t-set="taxes" t-value="', '.join([(tax.invoice_label or tax.name) for tax in line.taxes_id])"/>
                                                <td name="td_taxes" style="border:none" t-attf-class="text-end {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }} {{ 'text-nowrap' if len(taxes) &lt; 10 else '' }}">
                                                    <span t-out="taxes" id="line_tax_ids"></span>
                                                </td>
                                                <td name="td_subtotal" style="border:none" class="text-end">
                                                    <span  t-field="line.price_tax"></span>
                                                </td>
                                                <td name="td_subtotal" style="border:none" class="text-end o_price_total">
                                                    <t t-set="subtotal" t-value="line.price_subtotal"/>
                                                    <t t-esc="'{:,.2f}'.format(subtotal)"/>
                                                </td>
                                            </t>

                                        </tr>
                                    </t>
                                    <t t-set="lines" t-value="o.order_line"/>
                                    <t t-foreach="range(max(2-len(lines),0))" t-as="ln">
                                        <tr style="color: #ffffff;border:none" >
                                            <td style="color: #ffffff;border:none" >Packs</td>
                                            <td style="color: #ffffff;border:none" >UOM</td>
                                            <td style="color: #ffffff;border:none" >Particulars</td>
                                            <td style="color: #ffffff;border:none" >SKU</td>
                                            <td style="color: #ffffff;border:none" >SKU</td>
                                            <td style="color: #ffffff;border:none" >SKU</td>
                                            <td style="color: #ffffff;border:none" >SKU</td>
                                        </tr>
                                    </t>
                                    <tr style="color: #ffffff;border:none" >
                                            <td style="color: #ffffff;border:none" >Packs</td>
                                            <td style="color: #ffffff;border:none" >UOM</td>
                                            <td style="color: #ffffff;border:none" >Particulars</td>
                                            <td style="color: #ffffff;border:none" >SKU</td>
                                            <td style="color: #ffffff;border:none" >SKU</td>
                                            <td style="color: #ffffff;border:none" >SKU</td>
                                            <td style="color: #ffffff;border:none" >SKU</td>
                                        </tr>
                                    <tr style="border-top:1px solid #000;border-bottom:none;border-left:none;border-right:none;">
                                        <td colspan="5" class="text-end" style="border:none;"><b>Sub Total</b></td>
                                        <td colspan="2" class="text-end" style="border:none;">
                                            <t t-set="amount_untaxed" t-value="'{:,.2f}'.format(o.amount_untaxed)"/>
                                            <span t-esc="amount_untaxed"></span>
                                        </td>
                                    </tr>
                                    <tr style="border:none;">
                                        <td colspan="5" class="text-end" style="border:none;"><b>Standard Rate (5%)</b></td>
                                        <td colspan="2" class="text-end" style="border:none;">
                                            <t t-set="amount_tax" t-value="'{:,.2f}'.format(o.amount_tax)"/>
                                            <span t-esc="amount_tax"></span>
                                        </td>
                                    </tr>
                                    <tr style="border:none;">
                                        <td colspan="4" class="text-end" style="border:none;"></td>
                                        <td class="text-end" style="border:none;"><b>Total</b></td>
                                        <t t-set="amount_total" t-value="'{:,.2f}'.format(o.amount_total)"/>
                                        <td colspan="2" class="text-end" style="border:none;">
                                            <b><span t-esc="o.currency_id.name"/>  <span t-esc="amount_total"></span></b>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br></br>
                        </div>
                            <div>
                            <div>
                                <h4>Notes:</h4>
                                <span >This is a system generated document &amp; does not require any signature. </span>
                            </div>
                            <br></br>
<!--                            <div style="line-height: 1.1;">-->
                            <div >
                                <t t-if="o.notes">
<!--                                    <h5>Terms &amp; Conditions:</h5>-->
<!--                                    <span t-field="o.notes" ></span>-->
                                    <div class="page">
                                        <h4>Terms &amp; Conditions</h4>
                                        <p t-field="o.notes" style="text-align: justify;"/>
                                    </div>
                                </t>
                            </div>

                        </div>
                        </div>
                    </div>
                    </t>
            </t>
        </template>

        <template id="report_techcarrot_purchase">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="techcarret_rental.report_techcarrot_purchase_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>

    </data>
</odoo>
