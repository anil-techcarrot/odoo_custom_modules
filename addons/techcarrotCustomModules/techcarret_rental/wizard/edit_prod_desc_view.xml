<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record id="edit_product_desc_wizard" model="ir.ui.view">
        <field name="name">Edit Product Desc</field>
        <field name="model">edit.product.desc</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Enter Product Desc">
                <group>
                    <group>
                        <field name="prod_desc" />
                    </group>
                </group>
                <footer>
                    <button  name="confirm_product_line_desc" string="Confirm" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" class="oe_link" />
                </footer>
            </form>
        </field>
    </record>


</odoo>
