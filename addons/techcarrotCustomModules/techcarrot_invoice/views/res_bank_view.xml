<?xml version="1.0" encoding="utf-8" ?>
<odoo>

<!--Res partner Bank-->
    <record id="techcarret_partner_bank_form" model="ir.ui.view">
        <field name="name">res.partner.bank.form</field>
        <field name="model">res.partner.bank</field>
        <field name="inherit_id" ref="base.view_partner_bank_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='acc_number']" position="after">
                <field name="iban_no" />
                <field name="swift_code" />
            </xpath>
        </field>
    </record>

<!--    Res Bank-->
    <record id="techcarret_inherit_bank_form" model="ir.ui.view">
        <field name="name">res.bank.form</field>
        <field name="model">res.bank</field>
        <field name="inherit_id" ref="base.view_res_bank_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bic']" position="after">
                <field name="branch" />
            </xpath>
        </field>
    </record>

<!--    Res COmpany-->
    <record id="techcarret_res_company_inherit_form" model="ir.ui.view">
        <field name="name">res.company.bank.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="lut_code" />
                <field name="iec_code" />
            </xpath>
        </field>
    </record>

</odoo>