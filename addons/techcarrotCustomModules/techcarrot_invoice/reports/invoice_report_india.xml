        <template id="report_techcarrot_invoices_india_document">
            <t t-call="web.html_container">
                <t t-call="techcarrot_invoice.tech_india_invoice_layout">
                    <style>
                        table, th, td {
                            border:1px solid black;
                            padding-left:10px;
                            padding:5px;
                        }
                        .br-right {
                            border:1px solid black;
                            padding:5px;
                        }
                        .text-right {
                            text-align: end;
                        }
                    </style>
                    <div class="page" style="height: 100vh;display: flex;">
                        <div class="row mb-4" style="margin: 0; padding: 0;">
                            <div class="col-3" name="logo">
                                <div style="padding-top: 60px">
                                    <img t-if="o.company_id.logo" class="o_company_logo_small" t-att-src="image_data_uri(o.company_id.logo)" alt="Logo"/>
                                </div>
                            </div>
                            <div class="col-5" name="div_billing_address" >
<!--                                <div name="partner_header" class="row mb-4">-->
                                <div class="no-border" style="font-size:24px;"><b><t t-esc="o.company_id.parent_id.name"/></b></div>
                                <div class="no-border" ><b><t t-esc="o.company_id.street"/></b></div>
                                <div class="no-border" ><b><t t-esc="o.company_id.street2"/></b></div>
                                <div class="no-border" ><b><t t-esc="o.company_id.city"/> <t t-esc="o.company_id.state_id.name"/></b></div>
                                <div class="no-border" ><b><t t-esc="o.company_id.zip"/> <t t-esc="o.company_id.country_id.name"/></b></div>
                                <div class="no-border" ><b>GSTIN: <t t-esc="o.company_id.vat"/></b></div>
                                <div class="no-border" ><b><t t-esc="o.company_id.lut_code"/></b></div>
                                <div class="no-border" ><b>IEC CODE: <t t-esc="o.company_id.iec_code"/></b></div>
                            </div>
                            <div class="col-4" >
                                <div >
                                    <h2 style="padding-top: 140px;padding-left: 100px;">TAX INVOICE</h2>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="border: 1px solid #ccc;margin: 0; padding: 0;">
                            <div class="col-6" name="bill_to_address" >
                                <table width="100%" class="table table-borderless" style="border : none;">
                                    <tr >
                                        <td width="45%"><span>Invoice #</span></td>
                                        <td width="3%">:</td>
                                        <td width="52%"><b><span t-field="o.name"></span></b> </td>
                                    </tr>
                                    <tr>
                                        <td ><span>Invoice Date</span></td>
                                        <td >:</td>
                                        <td ><b><span t-field="o.invoice_date"></span></b> </td>
                                    </tr>
                                    <tr>
                                        <td ><span>Terms</span></td>
                                        <td >:</td>
                                        <td ><b><span t-field="o.invoice_payment_term_id.name"></span> </b></td>
                                    </tr>
                                    <tr>
                                        <td ><span>Due Date</span></td>
                                        <td >:</td>
                                        <td ><b><span t-field="o.invoice_date_due"></span> </b></td>
                                    </tr>
                                    <tr>
                                        <td ><span>P.O.#</span></td>
                                        <td >:</td>
                                        <td>
                                            <t t-if="o.line_ids.sale_line_ids">
                                                <b><span t-field="o.line_ids.sale_line_ids.order_id.client_order_ref"></span></b>
                                            </t>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-6" name="ship_to_address" style="border-left: 1px solid #ccc;">
                                <table width="100%" class="table table-borderless" style="border : none;">
                                    <td width="45%">Invoice amount in INR</td>
                                    <td width="3%">:</td>
                                    <td width="52%">
                                        <t t-set="amount_total" t-value="'{:,.2f}'.format(o.amount_total)"/>
                                        <b><span t-esc="amount_total"/> </b>
                                    </td>
                                </table>
                            </div>
                        </div>
<!--                        <div class="row" style="border: 1px solid #ccc;margin: 0; padding: 0;">-->
